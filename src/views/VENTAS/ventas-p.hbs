            <input type="text" class="grupo-ventas" name="nombreCliente" placeholder="Cliente">
        </div>
        <div class="grupo-ventas">
            <label for="">Telefono</label>
            <input type="number" class="grupo-ventas" name="telefono" placeholder="Telefono">
        </div>
        <div class="grupo-ventas">
            <label for="">NIT</label>
            <input type="number" class="grupo-ventas" name="nit" placeholder="NIT">
        </div>
